# --- Application configuration ---
# MaxMind GeoLite2 download license key (required to auto-update DBs)
LICENSE_KEY=

# Optional IPinfo token (improves IPinfo Lite download speed/allowance)
IPINFO_TOKEN=

# Telegram bot settings (required for bot service)
# Public domain (or https URL) where Telegram can reach your webhook
WEBHOOK_DOMAIN=
# Telegram bot API token
API_TOKEN=
# Optional custom webhook path. Example: /bot/<token>
WEBHOOK_PATH=/bot/${API_TOKEN}
# Optional secret for webhook verification
WEBHOOK_SECRET=
# Webhook HTTP port exposed by the bot container
WEBHOOK_PORT=8080
